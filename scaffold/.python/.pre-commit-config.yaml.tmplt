repos:
  - repo: https://github.com/astral-sh/ruff-pre-commit
    rev: v{% .RuffVersion %}
    hooks:
      - id: ruff-check
      - id: ruff-format

  - repo: https://github.com/kxue43/shell-cmd-on-change
    rev: "2.0.0"
    hooks:
      - id: shell-cmd-on-change
        name: uv-sync
        args:
          - "-Ppyproject.toml"
          - "-Puv.lock"
          - "uv sync"
        stages: [post-merge]
        always_run: true
        verbose: true

  - repo: https://github.com/godaddy/tartufo
    rev: v{% .TartufoVersion %}
    hooks:
      - id: tartufo
